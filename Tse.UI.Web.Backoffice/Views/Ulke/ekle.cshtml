@using Tse.UI.Web.Backoffice.Helpers
@model Tse.UI.Web.Backoffice.Models.UlkeEkleViewModel
@{
    ViewBag.Title = "Yeni Ülke";
    ViewBag.BreadCrumb1Text = "Başlangıç";
    ViewBag.BreadCrumb1Link = "/baslangic/gosterge-paneli";
    ViewBag.BreadCrumb2Text = "Ülkeler";
    ViewBag.BreadCrumb2Link = "/ulke";
    ViewBag.BreadCrumb3Text = "Yeni Ülke Ekle";
    ViewBag.BreadCrumb3Link = null;
    ViewBag.HeadText = "Yeni Ülke Ekle";
    ViewBag.SmallText = null;

    //Render Section
    @section renderSection
        {        
        <script type="text/javascript" src="~/Content/assets/pages/scripts/ulke.min.js"></script>
    }    
}
<div class="row">
    <div class="col-md-12">               
        <div class="portlet light portlet-fit portlet-form">
            <div class="portlet-body">                
                @using (Html.BeginForm("ekle", "ulke", FormMethod.Post, new { @name = "form1", @id = "form1", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()                                
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>                             
                            Formdaki alanları doğru ve eksiksiz bir biçimde doldurunuz.
                        </div>                                                
                        <div class="alert alert-success @TempData["DisplayStatus"]">
                            <button class="close" data-close="alert"></button> Kayıt Eklendi.
                        </div>                        

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(m => m.Ulke.UlkeAdi)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-4">                                   
                                   @Html.TextBoxFor(model => model.Ulke.UlkeAdi, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                            </div>
                        </div>
                        <div class="form-group">                            
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(m => m.Durum.DurumAdi)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-4">                              
                                @Html.DropDownListFor(m => m.Ulke.DurumID, new SelectList(Model.Durumlar, "DurumID", "DurumAdi", null).AddFirstItem("Seçiminiz",""), htmlAttributes: new { @class = "form-control" })                       
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Kaydet</button>                   
                                <button type="button" id="btnVazgec" class="btn grey-salsa btn-outline">Vazgeç</button>             
                            </div>
                        </div>
                    </div>
                }                
            </div>
        </div>        
    </div>
</div>