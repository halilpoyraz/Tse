@using Tse.Dal.Backoffice.Model;
@model List<Ulke>
@{
    ViewBag.Title = "Ülkeler";
    ViewBag.BreadCrumb1Text = "Başlangıç";
    ViewBag.BreadCrumb1Link = "/baslangic/gosterge-paneli";
    ViewBag.BreadCrumb2Text = "Ülkeler";
    ViewBag.BreadCrumb2Link = null;
    ViewBag.HeadText = "Tüm Ülkeler";
    ViewBag.SmallText = null;
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet-body">
            <!-- table toolbar -->
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-6">
                        <div class="btn-group">
                            <button class="btn green" onclick="window.location.href = '/ulkeler/yeni-ulke'">
                                Yeni Ülke
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="btn-group pull-right">
                            <button class="btn green btn-outline dropdown-toggle" data-toggle="dropdown">
                                Araçlar
                                <i class="fa fa-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="javascript:;"><i class="icon-printer"></i> Yazdır </a>
                                </li>
                                <li>
                                    <a href="javascript:;"><i class="fa fa-file-pdf-o" aria-hidden="true"></i> PDF </a>
                                </li>
                                <li>
                                    <a href="javascript:;"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Excel </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- table -->
            <table class="table table-striped table-hover" id="ulke">
                <thead>
                    <tr>
                        <th data-field="itemid"> Id </th>
                        <th data-field="name"> Ülke Adı </th>
                        <th data-field="price"> Durumu </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ulke in Model)
                    {
                        <tr>
                            <td> @ulke.UlkeID </td>
                            <td> @ulke.UlkeAdi </td>
                            <td> @ulke.Durum.DurumAdi </td>
                        </tr>
                    }
                </tbody>
            </table>
           
             <!-- context menus -->
            <ul id="example1-context-menu" class="dropdown-menu">
                <li data-item="edit"><a>Edit</a></li>
                <li data-item="delete"><a>Delete</a></li>
                <li data-item="action1"><a>Action Here</a></li>
                <li data-item="action2"><a>And Action Here</a></li>
            </ul>
           
             <!-- javascripts -->
            <script>
            $(function () {
                $('#ulke').bootstrapTable({
                    rowStyle: "rowStyle",
                    contextMenu: '#example1-context-menu',
                    onContextMenuItem: function(row, $el){
                        if($el.data("item") == "edit"){
                            alert("Edit: " + row.itemid + ' ' + row.name + ' ' + row.price);
                        }
                        else if($el.data("item") == "delete"){
                            alert("Delete: " + row.itemid + ' ' + row.name + ' ' + row.price);
                        }
                        else if($el.data("item") == "action1"){
                            alert("Action1: " + row.itemid + ' ' + row.name + ' ' + row.price);
                        }
                        else if($el.data("item") == "action2"){
                            alert("Action2: " + row.itemid + ' ' + row.name + ' ' + row.price);
                        }
                    }
                });
            });
            </script>
                      
        </div>
    </div>
</div>

