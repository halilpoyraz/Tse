@using Tse.UI.Web.Backoffice.Helpers
@model Tse.UI.Web.Backoffice.ViewModels.UlkeDuzenleViewModel
@section renderSection { <script type="text/javascript" src="~/Content/assets/pages/scripts/ulke.min.js"></script> }
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet light portlet-fit portlet-form">
            <div class="portlet-body">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("duzenle", "ulke", FormMethod.Post, new { @name = "form1", @id = "form1", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()    
                    @Html.HiddenFor(model => model.Ulke.UlkeID)
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>                             
                            Formdaki alanları doğru ve eksiksiz bir biçimde doldurunuz.
                        </div>                        
                                                                      
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(model => model.Ulke.UlkeAdi)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Ulke.UlkeAdi, new { @class = "form-control", @data_required = "1" })
                            </div>
                        </div>
                        <div class="form-group">                            
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(model => model.Durum.DurumAdi)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-4">                                                  
                                @Html.DropDownListFor(m => m.Ulke.DurumID, new SelectList(Model.Durumlar, "DurumID", "DurumAdi", Model.Ulke.DurumID).AddFirstItem("Seçiniz", ""), htmlAttributes: new { @class = "form-control" })                                                               
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Güncelle</button>                   
                                <button type="button" id="btnVazgec" class="btn grey-salsa btn-outline">Vazgeç</button> 
                            </div>
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>
@(Session["Success"] = "")