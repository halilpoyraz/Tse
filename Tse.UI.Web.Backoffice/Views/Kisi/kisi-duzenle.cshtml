@using Tse.UI.Web.Backoffice.Helpers
@model Tse.UI.Web.Backoffice.ViewModels.KisiDuzenleViewModel
@section renderSection{
    <script type="text/javascript" src="~/Content/assets/pages/scripts/kisi.min.js"></script>
    <script type="text/javascript">jQuery(document).ready(function () { KisiDuzenle.init(); });</script>
}
<div class="portlet light bordered">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="fa fa-briefcase" aria-hidden="true"></i>
            <span id="standart-title" class="caption-subject font-dark bold text-capitalize">@Model.Kisi.Adi @Model.Kisi.Soyadi</span>
        </div>
        <ul class="nav nav-tabs">
            <li class="@Html.Raw((TempData["activeTab"] == null) ? "active" : "")">
                <a href="#kisi-bilgisi" data-toggle="tab" aria-expanded="true">Kişi Bilgisi</a>
            </li>
            <li class="@Html.Raw((TempData["activeTab"] == "kisi-adres") ? "active" : "")">
                <a href="#kisi-adres" data-toggle="tab" aria-expanded="true">Adres</a>
            </li>
            <li class="@Html.Raw((TempData["activeTab"] == "kisi-telefon") ? "active" : "")">
                <a href="#kisi-telefon" data-toggle="tab" aria-expanded="true">Telefon</a>
            </li>
            <li class="@Html.Raw((TempData["activeTab"] == "kisi-eposta") ? "active" : "")">
                <a href="#kisi-eposta" data-toggle="tab" aria-expanded="true">E-Posta</a>
            </li>
            <li class="@Html.Raw((TempData["activeTab"] == "kisi-faturabilgi") ? "active" : "")">
                    <a href="#kisi-faturabilgi" data-toggle="tab" aria-expanded="true">Fatura Bilgi</a>
            </li>
        </ul>
    </div>
    <div class="portlet-body">
        <div class="tab-content">
            <div id="kisi-bilgisi" class="tab-pane @Html.Raw((TempData["activeTab"] == null) ? "active" : "")">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light portlet-fit portlet-form">
                            <div class="portlet-body">
                                @using (Html.BeginForm("kisi-duzenle", "kisi", FormMethod.Post, new { @name = "form1", @id = "form1", @class = "form-horizontal" }))
                                {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.Kisi.KisiID)
                                <div class="form-body">
                                    <div class="alert alert-danger display-hide">
                                        <button class="close" data-close="alert"></button>
                                        Formdaki alanları doğru ve eksiksiz bir biçimde doldurunuz.
                                    </div>
                                    <div class="alert alert-success @TempData["DisplayStatus"]">
                                        <button class="close" data-close="alert"></button> Kayıt Güncellendi.
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            <span>@Html.DisplayNameFor(m => m.Kisi.Adi)</span>
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.Kisi.Adi, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            <span>@Html.DisplayNameFor(m => m.Kisi.Soyadi)</span>
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.Kisi.Soyadi, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            <span>@Html.DisplayNameFor(m => m.Kisi.TcKimlikNo)</span>
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.Kisi.TcKimlikNo, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            <span>@Html.DisplayNameFor(m => m.Kisi.Unvan)</span>
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.Kisi.Unvan, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            <span>@Html.DisplayNameFor(m => m.Kisi.FirmaID)</span>
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(m => m.Kisi.FirmaID, new SelectList(Model.Firmalar, "firmaID", "TicaretUnvani", null).AddFirstItem("Seçiniz", ""), htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            <span>@Html.DisplayNameFor(m => m.Durum.DurumAdi)</span>
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(m => m.Kisi.DurumID, new SelectList(Model.Durumlar, "DurumID", "DurumAdi", null).AddFirstItem("Seçiniz", ""), htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12 text-right">
                                            <button type="submit" class="btn green">Güncelle</button>
                                            <button type="button" id="btn-vazgec" class="btn grey-salsa btn-outline">Vazgeç</button>
                                        </div>
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="kisi-adres" class="tab-pane @Html.Raw((TempData["activeTab"] == "kisi-adres") ? "active" : "")">
