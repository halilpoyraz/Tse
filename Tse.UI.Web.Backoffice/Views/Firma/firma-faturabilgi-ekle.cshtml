@using Tse.UI.Web.Backoffice.Helpers
@model Tse.UI.Web.Backoffice.ViewModels.FirmaDuzenleViewModel
@section renderSection{
    <script type="text/javascript" src="~/Content/assets/pages/scripts/firma.min.js"></script>
    <script type="text/javascript">jQuery(document).ready(function () { FirmaDuzenle.init(); });</script>
}
<div class="portlet light bordered">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="fa fa-briefcase" aria-hidden="true"></i>
            <span id="standart-title" class="caption-subject font-dark bold text-capitalize">@Model.Firma.TicaretUnvani</span>
        </div>
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#yeni-faturabilgi" data-toggle="tab" aria-expanded="true">Yeni Fatura Bilgisi</a>
            </li>
        </ul>
    </div>
    <div class="portlet-body">
        <div class="tab-content">
            <div id="yeni-faturabilgi" class="tab-pane active">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light portlet-fit portlet-form">
                            <div class="portlet-body">
                                @using (Html.BeginForm("firma-faturabilgi-ekle", "firma", FormMethod.Post, new { @name = "formFaturaBilgiEkle", @id = "formFaturaBilgiEkle", @class = "form-horizontal" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("FaturaBilgi.FaturaBilgiID", null)
                                    @Html.Hidden("FaturaBilgi.KisiID", null)                                        
                                    @Html.Hidden("FaturaBilgi.FirmaID", Model.Firma.FirmaID)
                                    <div class="form-body">
                                        <div class="alert alert-danger display-hide">
                                            <button class="close" data-close="alert"></button>
                                            Formdaki alanları doğru ve eksiksiz bir biçimde doldurunuz.
                                        </div>
                                        <div class="alert alert-success @TempData["DisplayStatus"]">
                                            <button class="close" data-close="alert"></button> Kayıt Eklendi.
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">
                                                <span>@Html.DisplayNameFor(m => m.FaturaBilgi.VergiDairesi)</span>
                                                <span class="required"> * </span>
                                            </label>
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(m => m.FaturaBilgi.VergiDairesi, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">
                                                <span>@Html.DisplayNameFor(m => m.FaturaBilgi.VergiNo)</span>
                                                <span class="required"> * </span>
                                            </label>
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(m => m.FaturaBilgi.VergiNo, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">
                                                <span>@Html.DisplayNameFor(m => m.FaturaBilgi.Adres.AdresSatiri)</span>
                                                <span class="required"> * </span>
                                            </label>
                                            <div class="col-md-10">
                                               @Html.DropDownListFor(m=>m.FaturaBilgi.AdresID,new SelectList(Model.Adresler.Where(a=>a.AdresTipiID==160),"AdresID","AdresSatiri", null).AddFirstItem("Seçiniz",""),  htmlAttributes: new { @class= "form-control" })
                                            </div>
                                        </div>                                    
                                        <div class="form-group">
                                            <label class="control-label col-md-2">
                                                <span>@Html.DisplayNameFor(m => m.FaturaBilgi.Durum.DurumAdi)</span>
                                                <span class="required"> * </span>
                                            </label>
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(m => m.FaturaBilgi.DurumID, new SelectList(Model.Durumlar, "DurumID", "DurumAdi", null).AddFirstItem("Seçiniz", ""), htmlAttributes: new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-12 text-right">
                                                <button type="submit" class="btn green">Kaydet</button>
                                                <button type="button" id="btn-yeni-faturabilgi-vazgec" class="btn grey-salsa btn-outline">Vazgeç</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    </div>
</div>
