
@model Tse.UI.Web.Backoffice.Models.SehirViewModel
@{
    ViewBag.Title = "Yeni Şehir";
    ViewBag.BreadCrumb1Text = "Başlangıç";
    ViewBag.BreadCrumb1Link = "/baslangic/gosterge-paneli";
    ViewBag.BreadCrumb2Text = "Şehirler";
    ViewBag.BreadCrumb2Link = "/sehirler/tum-sehirler";
    ViewBag.BreadCrumb3Text = "Yeni Şehir Ekle";
    ViewBag.BreadCrumb3Link = null;
    ViewBag.HeadText = "Yeni Şehir Ekle";
    ViewBag.SmallText = null;
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet light portlet-fit portlet-form">
            <div class="portlet-body">
                <!-- BEGIN FORM-->
                <form method="post" id="formYeniSehirEkle" class="form-horizontal">
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            Bazı alanları hatalı girdiniz. Lütfen belirtilen alanları kontrol edin..
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button> Your form validation is successful!
                        </div>
                        <div class="form-group">
                            @*<label class="control-label col-md-3">
                                Ülke
                                <span class="required"> * </span>
                            </label>*@
                            @Html.ValidationMessage("", " * ", new { @class = "required" })
                            @Html.LabelFor(Model=>Model.Ulke.UlkeAdi, new { @class = "control-label col-md-3" })
                            <div class="col-md-4">
                                <select class="form-control" name="UlkeId">
                                    <option value=""> Seçin.. </option>
                                    @foreach (var i in Model.Ulkeler)
                                    {
                                        <option value="@i.UlkeID">@i.UlkeAdi</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label class="control-label col-md-3">
                                Şehir Adı
                                <span class="required"> * </span>
                            </label>*@
                            @Html.ValidationMessage("", " * ", new { @class = "required" })
                            @Html.LabelFor(Model => Model.Sehir.SehirAdi, new { @class = "control-label col-md-3" })
                            <div class="col-md-4">
                                @*<input type="text" name="SehirAdi" data-required="1" class="form-control" />*@
                                @Html.TextBox("SehirAdi", null, new { @class = "form-control", @data_required = "1" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label class="control-label col-md-3">
                                Durum
                                <span class="required"> * </span>
                            </label>*@
                            @Html.ValidationMessage("", " * ", new { @class = "required" })
                            @Html.LabelFor(Model => Model.Durum.DurumAdi, new { @class = "control-label col-md-3" })
                            <div class="col-md-4">
                                <select class="form-control" name="DurumId">
                                    <option value=""> Seçin.. </option>
                                    @foreach (var i in Model.Durumlar)
                                    {
                                        <option value="@i.DurumID">@i.DurumAdi</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Kaydet</button>
                                <button type="button" class="btn grey-salsa btn-outline">Vazgeç</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>
