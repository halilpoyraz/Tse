@model Tse.Dal.Backoffice.Model.Sehir
@{
    ViewBag.Title = "Şehir Düzenle";
    ViewBag.BreadCrumb1Text = "Başlangıç";
    ViewBag.BreadCrumb1Link = "/baslangic/gosterge-paneli";
    ViewBag.BreadCrumb2Text = "Şehirler";
    ViewBag.BreadCrumb2Link = "/sehir";
    ViewBag.BreadCrumb3Text = "Şehir Düzenler";
    ViewBag.BreadCrumb3Link = null;
    ViewBag.HeadText = "Şehir Düzenle";
    ViewBag.SmallText = null;

    //Render Section
    @section renderSection
        {        
        <script type="text/javascript" src="~/Content/assets/pages/scripts/sehir.min.js"></script>
    }    
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet light portlet-fit portlet-form">
            <div class="portlet-body">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("duzenle", "sehir", FormMethod.Post, new { @name = "form1", @id = "form1", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()    
                    @Html.HiddenFor(model => model.SehirID)
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>                             
                            Formdaki alanları doğru ve eksiksiz bir biçimde doldurunuz.
                        </div>                                     
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button> Kayıt Eklendi.
                        </div>  
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(m => m.Ulke.UlkeAdi)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-4">
                                @Html.DropDownList("UlkeID", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>                      
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(m => m.SehirAdi)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-4">
                                   @Html.TextBox("SehirAdi", null, new { @class = "form-control", @data_required = "1" })
                            </div>
                        </div>
                        <div class="form-group">                            
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(m => m.Durum.DurumAdi)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-4">                                                              
                                  @Html.DropDownList("DurumID", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Kaydet</button>                   
                                <button type="button" id="btnVazgec" class="btn grey-salsa btn-outline">Vazgeç</button>             
                            </div>
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>
@(Session["Success"] = "")