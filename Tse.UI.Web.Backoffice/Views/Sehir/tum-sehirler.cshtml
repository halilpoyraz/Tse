@using Tse.Dal.Backoffice.Model;
@model List<Sehir>
@{
    ViewBag.Title = "Şehirler";
    ViewBag.BreadCrumb1Text = "Başlangıç";
    ViewBag.BreadCrumb1Link = "/baslangic/gosterge-paneli";
    ViewBag.BreadCrumb2Text = "Şehirler";
    ViewBag.BreadCrumb2Link = null;
    ViewBag.HeadText = "Tüm Şehirler";
    ViewBag.SmallText = null;
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet-body">
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-6">
                        <div class="btn-group">
                            <button class="btn green" onclick="window.location.href = '/sehirler/yeni-sehir'">
                                Yeni Şehir
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="btn-group pull-right">
                            <button class="btn green btn-outline dropdown-toggle" data-toggle="dropdown">
                                Araçlar
                                <i class="fa fa-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="javascript:;"><i class="icon-printer"></i> Yazdır </a>
                                </li>
                                <li>
                                    <a href="javascript:;"><i class="fa fa-file-pdf-o" aria-hidden="true"></i> PDF </a>
                                </li>
                                <li>
                                    <a href="javascript:;"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Excel </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                <thead>
                    <tr>
                        <th> Id </th>
                        <th> Ülke Adı </th>
                        <th> Sehir Adı </th>
                        <th> Durumu </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sehir in Model)
                    {
                        <tr>
                            <td> @sehir.SehirID </td>
                            <td> @sehir.Ulke.UlkeAdi</td>
                            <td> @sehir.SehirAdi</td>
                            <td> @sehir.Durum.DurumAdi</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
